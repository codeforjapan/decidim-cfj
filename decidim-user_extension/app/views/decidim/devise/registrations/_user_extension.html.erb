            <%= f.fields_for :user_extension, f.object.user_extension do |f_ext| %>
  <div class="field">
    <%= f_ext.text_field :real_name, label: t(:real_name, scope: "activemodel.attributes.user_extension") %>
  </div>

  <div class="field">
    <%= f_ext.text_field :address, label: t(:address, scope: "activemodel.attributes.user_extension") %>
  </div>

  <div class="field">
    <%= f_ext.text_field :birth_year, label: t(:birth_year, scope: "activemodel.attributes.user_extension") %>
  </div>

  <div class="field">
    <%= f_ext.label :gender, t(:gender, scope: "activemodel.attributes.user_extension") %>
    <%= field_set_tag nil, class: 'radio-buttons' do %>
      <%= f_ext.collection_radio_buttons :gender, Decidim::UserExtensionAuthorizationHandler::GENDERS, :first, :last do |elem| %>
        <%= elem.label(class: "radio_button") { elem.radio_button(class: "radio_button") + I18n.t(".#{elem.text}", scope: "enums.user_extension.gender") } %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= f_ext.text_field :occupation, label: t(:occupation, scope: "activemodel.attributes.user_extension") %>
  </div>
<% end %>
